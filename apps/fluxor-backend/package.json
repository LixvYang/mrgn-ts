{
  "name": "fluxor-backend",
  "version": "1.0.0",
  "description": "Fluxor Backend Service",
  "scripts": {
    "clean": "rimraf dist node_modules",
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "install": "bun install",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server ./src/index.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "latest",
    "@elysiajs/cron": "^1.3.0",
    "@elysiajs/swagger": "latest",
    "@mrgnlabs/marginfi-client-v2": "workspace:*",
    "@mrgnlabs/marginfi-v2-ui-state": "workspace:*",
    "@solana/web3.js": "^1.93.2",
    "bignumber.js": "^9.1.2",
    "elysia": "latest",
    "ioredis": "^5.6.1",
    "pino": "^9.7.0",
    "pino-multi-stream": "^6.0.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.3",
    "rotating-file-stream": "^3.2.6"
  },
  "devDependencies": {
    "bun-types": "latest",
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  }
}